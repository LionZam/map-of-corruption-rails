<div class="d-flex justify-content-between align-items-center pt-3">
<h1>Существующие депутаты</h1>
  <% if can? :create, @deputy %>
    <%= link_to 'Добавить', new_deputy_path, class: "btn btn-outline-success float-right" %>
  <% end %>

</div>
<table class="table table-striped">
  <tr>
    <th>Фото</th>
    <th>Имя</th>
    <th>Фамилия</th>
    <th>Отчество</th>
    <th>Текущая должность</th>
    <th colspan="3"></th>
  </tr>

  <% @deputies.each do |deputy| %>
    <tr>
<!--
      <td><%#= image_tag(deputy.photo, alt: 'Image') if deputy.photo %></td>
-->
      <td><%= deputy.name %></td>
      <td><%= deputy.surname %></td>
      <td><%= deputy.patronymic %></td>
      <td><%= deputy.current_position %></td>
      <td><%= link_to 'Все дела', deputy_path(deputy), class: "btn btn-info" %></td>
      <td>
        <% if can? :edit, @deputy %>
          <%= link_to 'Изменить', edit_deputy_path(deputy), class: "btn btn-warning" %></td>
        <% end %>
        <td>
          <% if can? :delete, @deputy %>
            <%= link_to 'Удалить', deputy_path(deputy), method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure?'} %></td>
          <% end %>
          </tr>
  <% end %>
</table>

