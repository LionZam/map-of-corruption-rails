<div class="container">
  <% if flash[:success] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:success] %>
    </div>
  <% end %>
  <h2 class="full-name font-weight-bold"><%= @deputy.name %> <%= @deputy.surname %> <%= @deputy.patronymic %></h2>
  <h5 class="position"><%= @deputy.current_position %></h5>
  <%= link_to "Изменить", edit_deputy_path(@deputy) %>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Добавить дело', new_deputy_deed_path(@deputy), class: "btn btn-info float-right" %>
    </div>
  </div>
  <h5>Список дел</h5>
  <table class="deputies table table-striped table-hover">
    <tr class="headline thead-dark">
      <th>Признак</th>
      <th>Регион</th>
      <th>Ущерб</th>
      <th>Мера пресечения</th>
      <th>Отбывание наказания</th>
      <th>Дата</th>
      <th colspan="3"></th>
      <th>Пруф линки</th>
    </tr>
    <% @deputy.deeds.each do |deed| %>
      <tr>
        <td><%= deed.sign %></td>
        <td><%= deed.region.region_value %></td>
        <td><%= deed.detriment %></td>
        <td><%= deed.punishment %></td>
        <td><%= deed.status %></td>
        <td><%= deed.date %></td>
        <td><%= link_to 'Посмотреть', deed %></td>
        <td><%= link_to 'Изменить', edit_deed_path(deed) %></td>
        <td><%= link_to 'Удалить', deputy_deed_path(deed), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>