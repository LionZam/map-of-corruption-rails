<%= form_with scope: :deputy, url: deputies_path, class: 'form-group', local: true do |f| %>
  <div class="form-group">
    <%= f.label :punishment, "Имя" %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Евгения" %>
  </div>
  <div class="form-group">
    <%= f.label :punishment, "Фамилия" %><br>
    <%= f.text_field :surname, class: "form-control", placeholder: "Васильева" %>
  </div>
  <div class="form-group">
    <%= f.label :punishment, "Отчество" %><br>
    <%= f.text_field :patronymic, class: "form-control", placeholder: "Николаевна" %>
  </div>
  <div class="form-group">
    <%= f.label :punishment, "Текущая должность" %><br>
    <%= f.text_field :current_position, class: "form-control", placeholder: "Действительный государственный советник Российской Федерации 3 класса " %>
  </div>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>