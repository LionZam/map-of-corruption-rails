<p id="notice"><%= notice %></p>

<h1>Deeds</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deeds.each do |deed| %>
      <tr>
        <td><%= link_to 'Посмотреть', deed %></td>
        <td><%= link_to 'Изменить', edit_deed_path(deed) %></td>
        <td><%= link_to 'Удалить', deed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deed', new_deed_path %>
